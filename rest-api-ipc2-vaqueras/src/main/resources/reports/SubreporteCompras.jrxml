<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
              name="SubreporteCompras" 
              pageWidth="555" 
              pageHeight="30" 
              leftMargin="0" 
              rightMargin="0" 
              topMargin="0" 
              bottomMargin="0">
    
    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>
    
    <field name="nombreUsuario" class="java.lang.String"/>
    <field name="totalJuegosComprados" class="java.lang.Integer"/>
    <field name="totalGastado" class="java.lang.Double"/>
    <field name="pais" class="java.lang.String"/>
    
    <detail>
        <band height="30">
            <!-- Datos de compras -->
            <textField>
                <reportElement x="0" y="5" width="200" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreUsuario}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="200" y="5" width="100" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalJuegosComprados}]]></textFieldExpression>
            </textField>
            
            <textField pattern="Q#,##0.00">
                <reportElement x="300" y="5" width="120" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalGastado}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="420" y="5" width="135" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{pais} != null ? $F{pais} : "No especificado"]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>
