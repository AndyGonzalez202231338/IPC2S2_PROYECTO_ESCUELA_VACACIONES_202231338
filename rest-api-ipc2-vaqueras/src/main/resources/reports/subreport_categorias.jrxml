<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="subreport_categorias">

    <parameter name="categoriasFavoritasDataSource" class="net.sf.jasperreports.engine.data.JRBeanCollectionDataSource"/>
    
    <field name="nombreCategoria" class="java.lang.String"/>
    <field name="cantidadJuegos" class="java.lang.Integer"/>
    <field name="porcentaje" class="java.lang.Double"/>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="300" height="30"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[CATEGORÃA]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="100" height="30"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[CANTIDAD]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="155" height="30"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[% DEL TOTAL]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{nombreCategoria}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="100" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{cantidadJuegos}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="0" width="155" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[String.format("%.1f%%", $F{porcentaje})]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
