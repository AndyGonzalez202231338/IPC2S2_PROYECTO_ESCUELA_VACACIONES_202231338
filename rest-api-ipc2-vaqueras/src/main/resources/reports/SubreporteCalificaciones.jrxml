<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
              name="SubreporteCalificaciones" 
              pageWidth="555" 
              pageHeight="30" 
              leftMargin="0" 
              rightMargin="0" 
              topMargin="0" 
              bottomMargin="0">
    
    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>
    
    <field name="nombreUsuario" class="java.lang.String"/>
    <field name="totalCalificaciones" class="java.lang.Integer"/>
    <field name="pais" class="java.lang.String"/>
    
    <detail>
        <band height="30">
            <!-- Datos de calificaciones -->
            <textField>
                <reportElement x="0" y="5" width="250" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreUsuario}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="250" y="5" width="150" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalCalificaciones}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="400" y="5" width="155" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{pais} != null ? $F{pais} : "No especificado"]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>
